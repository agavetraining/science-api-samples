{
  "name": "meme-dxing-stampede",
  "version": "4.9.1",
  "helpURI": "http://meme.nbcr.net/meme/doc/meme.html",
  "label": "Multiple EM for Motif Elicitation",
  "defaultQueue": "normal",
  "defaultNodeCount": 4,
  "defaultMemoryPerNode": 8,
  "defaultProcessorsPerNode": 12,
  "defaultRequestedTime": "48:00:00",
  "shortDescription": "Motif-based sequence analysis tools",
  "longDescription": "Motif-based sequence analysis tools. Built to run as a parallel application on Stampede.",
  "executionSystem": "dxing-stampede",
  "executionType": "HPC",
  "parallelism": "PARALLEL",
  "deploymentPath": "dxing/applications/meme_4.9.1",
  "deploymentSystem": "data.iplantcollaborative.org",
  "templatePath": "wrapper.sh",
  "testPath": "test/test.sh",
  "tags": [
    "meme", "dreme", "glam2"
  ],
  "modules": [
    "load mvapich2/2.0b","load intel/14.0.1.106"
  ],
  "inputs": [
    {
      "id": "dataset",
      "details": {
      	"defaut": null,
        "label": "Dataset",
        "description": "Dataset to use in this run",
        "argument": null,
        "showArgument": false
      },
      "semantics": {
        "minCardinality": 1,
        "ontology": []
      },
      "value": {
        "required": true,
        "visible": true
      }
    },
    {
      "id": "psp",
      "details": {
        "defaut": null,
        "label": "Positional priors file",
        "description": "Name of positional priors file",
        "argument": "-psp",
        "showArgument": false
      },
      "semantics": {
        "minCardinality": 1,
        "ontology": []
      },
      "value": {
        "required": true,
        "visible": true
      }
    }
  ],
  "parameters": [
    {
      "id": "dna",
      "details": {
        "label": "dna",
        "description": "Include if sequences use DNA alphabet",
        "argument": "-dna",
        "showArgument": false
      },
      "value": {
      	"default": true,
        "type": "bool",
        "visible": true,
        "required": false
      },
      "semantics": {
        "ontology": []
      }
    },
    {
      "id": "maxsize",
      "details": {
        "label": "Max size",
        "description": "Maximum dataset size in characters",
        "argument": "-maxsize",
        "showArgument": false
      },
      "value": {
        "default": 1000000,
        "type": "number",
        "required": true,
        "visible": true
      },
      "semantics": {
        "ontology": []
      }
    },
    {
      "id": "nmotifs",
      "details": {
        "label": "nmotifs",
        "description": "The number of *different* motifs to search for",
        "argument": "-nmotifs",
        "showArgument": false
      },
      "value": {
        "default": 10,
        "type": "number",
        "required": true,
        "visible": true
      },
      "semantics": {
        "ontology": []
      }
    },
    {
      "id": "mod",
      "details": {
        "label": "mod",
        "description": "Distribution of motifs",
        "argument": "-mod",
        "showArgument": false
      },
      "value": {
        "default": ["zoops"],
        "type": "enumeration",
        "enum_values": [
          {"zoops":"zoops"},
          {"oops":"oops"},
          {"anr":"anr"}
        ],
        "required": true,
        "visible": true
      },
      "semantics": {
        "ontology": []
      }
    },
    {
      "id": "evt",
      "details": {
        "label": "evt",
        "description": "Stop if motif E-value greater than <evt>",
        "argument": "-evt",
        "showArgument": false
      },
      "value": {
        "default": 0.0001,
        "type": "number",
        "required": true,
        "visible": true
      },
      "semantics": {
        "ontology": []
      }
    },
    {
      "id": "minw",
      "details": {
        "label": "minw",
        "description": "Minimum motif width",
        "argument": "-minw",
        "showArgument": false
      },
      "value": {
      	"default": 6,
        "type": "number",
        "visible": true,
        "required": false
      },
      "semantics": {
        "ontology": []
      }
    },
    {
      "id": "maxw",
      "details": {
        "label": "maxw",
        "description": "Maximum motif width",
        "argument": "-maxw",
        "showArgument": false
      },
      "value": {
      	"default": 15,
        "type": "number",
        "visible": true,
        "required": false
      },
      "semantics": {
        "ontology": []
      }
    }
  ],
  "checkpointable": false
}